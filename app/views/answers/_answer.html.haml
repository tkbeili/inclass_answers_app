%div{id: "#{dom_id(answer)}"}
  = special_truncate answer.body
  %p
    Created On: #{formatted_date answer.created_at}
  %br
  - if can? :destroy, answer
    = link_to "Delete", [@question, answer], method: :delete, data: {confirm: "Are you sure you want to delete this answer"}, remote: true, class: "btn btn-danger"
  %hr